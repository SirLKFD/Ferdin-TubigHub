    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" FontFamily="Electronic Arts Text"
    d:DesignHeight="1500"
    d:DesignWidth="1000">

    <Grid>

        <ScrollViewer

Foreground="{ThemeResource SystemAccentColor}" Margin="0,0,-298,0">

