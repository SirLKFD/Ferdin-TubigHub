                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
         FontSize="23"
         Text="TERMS AND CONDITIONS"
         Margin="50"                              
         FontWeight="Bold"/>


                    <ScrollViewer Grid.Row="2" Margin="0,0,66,0">
                        <RichTextBlock x:Name="TermsAndConditions" Grid.Row="2" Margin="60,0,51,-120" Grid.RowSpan="4" Height="1316" Width="606">
                           
